html
  head
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous")
    title= "Productos (PUG)"
  body
    div(class="container mt-3")
        h1(style= "color: rgb(189, 105, 9) ") Ingrese un producto
        div(class="p-4 mt-1 mb-3 bg-dark rounded-3")
            form(action= "/api/productos" method="post")
                div(class="form-group")
                    label(for="TITLE") Producto
                    input(type="text" id="TITLE" class="form-control" name="TITLE" placeholder="Nombre del Producto" required)
                div(class="form-group")
                    label(for="PRICE") Precio
                    input(type="number" id="PRICE" class="form-control" name="PRICE" placeholder="Precio del Producto"  required)
                div(class="form-group")
                    label(for="THUMBNAIL") Imagen
                    input(type="url" id="THUMBNAIL" class="form-control" name="THUMBNAIL" placeholder="URL a imagen descriptiva"  required)
                button(class = "btn btn-info mt-3 mb-5" type="submit") Enviar
        input(type="button" class="btn btn-primary" onclick="location.href='/productos';" value="Ver Productos Cargados")